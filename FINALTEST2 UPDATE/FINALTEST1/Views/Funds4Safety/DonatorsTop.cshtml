@using FINALTEST1.Models
@model List<DonatorsPage>
@{
    ViewData["Title"] = "Donators";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h1 style="text-align: center; font-size: 45px; font-weight: bold;">Donators List</h1>

<br />

<div class="wrapper">

    <a class="btn btn-primary" asp-area="" asp-controller="Funds4Safety" asp-action="Donators">Default</a> &nbsp;
    <a class="btn btn-primary active" aria-pressed="true" asp-area="" asp-controller="Funds4Safety" asp-action="DonatorsTop">Top</a> &nbsp;
    <a class="btn btn-primary" asp-area="" asp-controller="Funds4Safety" asp-action="DonatorsRecent">Recent</a>

</div>

<br>

<table class="table" style="margin-left: auto; margin-right:auto; width:75%;">
    <thead>
        <tr>
            <th style="text-align:center;">
                <h5>First Name</h5>
            </th>
            <th style="text-align:center;">
                <h5>Last Name</h5>
            </th>
            <th style="text-align:center;">
                <h5>Amount</h5>
            </th>
            <th style="text-align:center;">
                <h5>Date</h5>
            </th>
            <th style="text-align:center;">
                <h5>Validated</h5>
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (DonatorsPage item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Amount</td>
                <td>@item.Date</td>
                <td>@item.Validate</td>
                <td>
                    <a href="~/Funds4Safety/Edit?uID=@item.UserID">Edit First Name and Last Names</a>
                </td>
                <td>
                    <a href="~/Funds4Safety/EditMonetary?mID=@item.MonetaryID">Edit Amount and Validated</a>
                </td>
                <td>
                    <form action="~/Funds4Safety/Delete" method="post">
                        <input type="hidden" name="UserID" value="@item.UserID" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

